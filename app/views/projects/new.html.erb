<% provide(:title, 'Add project') %>
<h1>Add Project</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@project) do |f| %>
      <%= render 'shared/project_error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :comment %>
      <%= f.text_field :comment %>

      <%= f.submit "Add new project", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>