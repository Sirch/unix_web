<% provide(:title, 'New Change') %>

<h1>Add Change</h1>

<div class="row">
  <div class="span8 offset1">
    <%= simple_form_for(@change, html: { class: "form-horizontal"}) do |f| %>
      <%#= render 'shared/change_error_messages' %>

      <%= f.input :subject, as: :string %>
      <%= f.input :content %>      
      
      <%= f.submit "Add change", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

